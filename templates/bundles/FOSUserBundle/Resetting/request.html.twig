{% extends 'base.html.twig' %}

{% block content %}
    <h1 class="mt-4 mb-3">Récupération de mot de passe</h1>

    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div class="control-group form-group">
            <label for="email">Adresse email</label>
            <input type="text" id="email" name="username" required="required" class="form-control"/>
        </div>
        <div class="control-group form-group">
            <input type="submit" class="btn btn-primary" value="Réinitialiser le mot de passe"/>
        </div>
    </form>
{% endblock %}
